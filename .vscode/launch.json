{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Philo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/philo/philo",
            "args": ["5", "800", "200", "200", "7"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/philo",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Follow child processes",
                    "text": "set follow-fork-mode child"
                },
                {
                    "description": "Keep original process attached",
                    "text": "set detach-on-fork off"
                }
            ]
        },
        {
            "name": "Debug Philo Bonus (with child processes)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/philo_bonus/philo_bonus",
            "args": ["4", "410", "200", "200"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/philo_bonus",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Follow child processes",
                    "text": "set follow-fork-mode child"
                },
                {
                    "description": "Keep original process attached",
                    "text": "set detach-on-fork off"
                }
            ]
        }
    ]
}
